// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  name          String  @unique
  email         String  @unique
  password      String
  artName       String?
  aboutMe       String?
  age           Int     @default(0)
  avatarImgPath String?

  @@map("users")
}